set nocompatible

filetype plugin indent on
syntax on

set hlsearch
set incsearch
set ignorecase

set smartindent

set splitbelow
set splitright

set number
set relativenumber

set showtabline =2

set mouse=a

set undofile

set expandtab
set shiftwidth =2
set tabstop =2

set numberwidth =4

set laststatus =3

set background=dark
